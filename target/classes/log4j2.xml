<!--status="warn" 日志框架本身的日志输出级别-->
<!--monitorInterval="5"自动加载配置文件的间隔时间，不少于5s-->
<Configuration name="Config" status="off" monitorInterval="5">
    <!--集中配置属性进行管理，通过${name}使用-->
    <properties>
        <property name="LOG_HOME">D:/logs</property>
    </properties>

    <!--日志处理-->
